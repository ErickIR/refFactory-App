             mc:Ignorable="d"
             x:Class="CitizenApp.Views.MainLoginPage"
             BackgroundImageSource="LoginPageGround">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Padding="30">
            <!--<Frame
                    
                    HasShadow="True"
                    WidthRequest="250"
