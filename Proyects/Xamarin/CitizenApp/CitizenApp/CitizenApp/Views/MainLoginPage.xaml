                BackgroundColor="#828998"
                    CornerRadius="23"
                    Padding="0">
                <ImageButton
                    WidthRequest="250"
                    HeightRequest="50"
                    BorderColor="#828998"
                    Margin="25,0,0,0"
                    Source="Iniciar_Sesion"></ImageButton>
            </Frame>-->
            <Button
                BackgroundColor="#828998"
                TextColor="White"
                WidthRequest="250"
                HeightRequest="50"
                CornerRadius="25"
                
                FontSize="23"
                FontAttributes="Bold"
                FontFamily="{StaticResource BoldFont}"
                Text="Iniciar Sesion" ContentLayout="Left,5" Image="Login"  HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="0,0,0,10"
                />
            <Button
                BackgroundColor="White"
                TextColor="Black"
                WidthRequest="250"
                HeightRequest="50"
                CornerRadius="25"
                
                FontSize="23"
                FontAttributes="Bold"
                FontFamily="{StaticResource BoldFont}"
                Text="Registrarse" ContentLayout="Left,0" Image="Register"  HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="0,0,0,10"
                />

            <Button
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                TextColor="White"
                WidthRequest="250"
                HeightRequest="50"
                CornerRadius="25"
                
                FontSize="15"
                FontAttributes="Bold"
                FontFamily="{StaticResource BoldFont}"
                Text="Ingresar como Invitado" 
                />

        </StackLayout>
