@model IEnumerable<BackOfficeApp.Models.StatusIncidencia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Estado de Incidencias</h1>

<p>
    <a asp-action="Create">Crear nuevo.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatusIncidenciaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.StatusIncidenciaId">Detalles</a> 
            </td>
        </tr>
}
    </tbody>
</table>
